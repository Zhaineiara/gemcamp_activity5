<div class="container vh-100 d-flex justify-content-center align-items-center">
  <div class="card" style="max-width: 600px; width: 100%; background-color: #f8f9fa;">
    <div class="card-header bg-primary text-white">
      <h2 class="mb-0">Product Information</h2>
    </div>
    <div class="card-body">
      <p class="card-text"><strong>Name:</strong> <%= @product.name || '-' %></p>
      <p class="card-text"><strong>Content:</strong> <%= @product.content || '-' %></p>
      <p class="card-text"><strong>Quantity:</strong> <%= @product.quantity || '-' %></p>
      <p class="card-text"><strong>Price:</strong> <%= number_to_currency(@product.price || 0) %></p>
      <p class="card-text"><strong>Discount:</strong> <%= @product.discount || '-' %></p>
      <p class="card-text"><strong>Availability:</strong> <%= @product.available.nil? ? '-' : (@product.available ? 'Available' : 'Not Available') %></p>
      <p class="card-text"><strong>Release Date:</strong> <%= @product.released_at.present? ? @product.released_at.strftime('%B %d, %Y') : '-' %></p>
      <p class="card-text"><strong>Expiry Date:</strong> <%= @product.expiry_date.present? ? @product.expiry_date.strftime('%B %d, %Y') : '-' %></p>
    </div>
    <div class="card-footer text-end">
      <%= link_to 'Back to Products', products_path, class: 'btn btn-secondary' %>
    </div>
  </div>
</div>
